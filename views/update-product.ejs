<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/header.ejs') %>
        <h1>Edit Product Details:</h1>
        <form action="/management/edit/<%= product_id %>?_method=PATCH" method="POST" id="update-form">
            <label >Product ID: 
                <input type="text" id="product_id" name="product_id" value="<%= product_id %>"required>
            </label>
            <label>Product Name: 
                <input type="text" id="product_name" name="product_name" value="<%= product_name %>" required>
            </label>
            <label>Quantity:
                <input type="text" id="quantity_on_hand" name="quantity_on_hand" value="<%= quantity_on_hand %>"required>
            </label>
            <label>Wholesale Price: $
                <input type="text" id="wholesale_price" name="wholesale_price" value="<%= wholesale_price %>"required>
            </label>
            <label>Retail Price: $
                <input type="text" id="retail_price" name="retail_price" value="<%= retail_price %>"required>
            </label>
            <button>SUBMIT</button>
        </form>
    </body>
    <%- include('./partials/footer.ejs') %>
</html>